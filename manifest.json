{
  "manifest_version": 3,
  "name": "leetdeck",
  "version": "1.0",
  "description": "Leetcode 2 Anki extension.",
  "permissions": [
    "activeTab",
    "tabs",
    "declarativeNetRequest",
    "webRequest",
    "webRequestBlocking"
  ],
  "content_scripts": [{
    "js": ["popup.js"],
    "matches": ["http://*/*", "https://*/*"],
    "run_at": "document_end"
  }],
  "host_permissions": [
    "http://localhost/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/favicon16.png",
      "32": "assets/favicon32.png"

    }
  },
  "icons": {
    "16": "assets/favicon16.png",
    "32": "assets/favicon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}